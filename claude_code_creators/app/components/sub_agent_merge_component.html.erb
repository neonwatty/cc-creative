<div class="<%= dialog_classes %> sub-agent-merge" 
     data-controller="sub-agent-merge"
     data-sub-agent-merge-sub-agent-id-value="<%= sub_agent.id %>"
     data-sub-agent-merge-document-id-value="<%= document.id %>"
     aria-labelledby="merge-dialog-title" 
     role="dialog" 
     aria-modal="true">
  
  <!-- Background Backdrop -->
  <div class="<%= backdrop_classes %>" 
       data-action="click->sub-agent-merge#close"
       data-sub-agent-merge-target="backdrop"
       aria-hidden="true"></div>

  <!-- Dialog Panel -->
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!-- This element is to trick the browser into centering the modal contents. -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="<%= dialog_panel_classes %>"
         data-sub-agent-merge-target="panel">
      
      <!-- Header -->
      <div class="<%= header_classes %>">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-gray-900" id="merge-dialog-title">
              Merge Agent Content
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              Merge content from <%= sub_agent.name %>
            </p>
            <p class="mt-1 text-sm text-gray-500">
              <%= assistant_message_count %> assistant messages to merge
            </p>
            <p class="mt-1 text-xs text-gray-400 word-count">
              <%= word_count(merge_content) %> words
            </p>
          </div>
          <button type="button"
                  class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                  data-action="click->sub-agent-merge#close">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Content -->
      <div class="px-6 py-4">
        <!-- Success/Error Messages -->
        <div data-sub-agent-merge-target="messageContainer">
          <div data-sub-agent-merge-target="successMessage" class="hidden"></div>
          <div data-sub-agent-merge-target="errorMessage" class="hidden"></div>
        </div>

        <!-- Content Preview -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Content Preview
          </label>
          <% if has_content_to_merge? %>
            <div class="<%= content_preview_classes %> content-preview" data-sub-agent-merge-target="preview">
              <%= format_content_preview(merge_content) %>
              <% if content_is_long? %>
                <div class="truncate-preview mt-2">
                  <button type="button" class="text-blue-600 text-sm hover:text-blue-800">
                    Show more
                  </button>
                </div>
              <% end %>
            </div>
            <% if is_large_merge? %>
              <div class="warning mt-2 p-2 bg-yellow-50 border border-yellow-200 rounded text-sm text-yellow-800">
                This will add a large amount of content to your document.
              </div>
            <% end %>
          <% else %>
            <div class="empty-state text-center py-8 bg-gray-50 border border-gray-200 rounded">
              <h4 class="text-lg font-medium text-gray-900 mb-2">No content to merge</h4>
              <p class="text-gray-500">This agent has no assistant messages</p>
            </div>
          <% end %>
        </div>

        <!-- Custom Separator Input -->
        <div class="mb-4" data-sub-agent-merge-target="customSeparator">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Custom Separator
          </label>
          <input type="text" name="custom_separator" class="block w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Enter custom separator...">
        </div>

        <!-- Format Preview -->
        <div class="mb-4 format-preview" data-sub-agent-merge-target="formatPreview">
          <div class="text-xs text-gray-500 p-2 bg-gray-50 rounded border">
            Preview will update based on selected options
          </div>
        </div>

        <!-- Agent Metadata -->
        <div class="mb-4 agent-metadata">
          <div class="text-xs text-gray-500">
            <span class="font-medium"><%= sub_agent.agent_type.humanize %></span> • 
            Created <%= time_ago_in_words(sub_agent.created_at) %> ago
            <% if sub_agent.status == "completed" %>
              • <span class="text-green-600 font-medium">Agent completed</span>
            <% end %>
          </div>
        </div>

        <!-- Loading State -->
        <div data-sub-agent-merge-target="loadingState" class="hidden">
          <div class="text-center py-4">
            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
            <span class="ml-2 text-sm text-gray-600">Processing...</span>
          </div>
        </div>

        <!-- Confirmation Dialog -->
        <div data-sub-agent-merge-target="confirmDialog" class="hidden">
          <div class="text-sm text-gray-600 p-4 bg-yellow-50 border border-yellow-200 rounded">
            Are you sure you want to merge this content?
          </div>
        </div>

        <!-- Merge Options Form -->
        <%= form_with url: merge_document_sub_agent_path(document, sub_agent),
                      method: :post,
                      local: false,
                      data: { 
                        controller: "sub-agent-merge-form",
                        action: "turbo:submit-end->sub-agent-merge-form#handleSubmitEnd",
                        turbo_frame: "_top"
                      } do |form| %>
          
          <!-- Hidden field for content -->
          <%= form.hidden_field :content, value: merge_content, data: { "sub-agent-merge-target": "contentField" } %>
          
          <!-- Merge Location Options -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Merge Location
            </label>
            <div class="space-y-3">
              <% merge_location_options.each_with_index do |option, index| %>
                <div class="relative flex items-start">
                  <div class="flex items-center h-5">
                    <%= form.radio_button :merge_position, 
                                          option[:value], 
                                          checked: index == 0,
                                          class: checkbox_input_classes,
                                          id: "merge_position_#{option[:value]}" %>
                  </div>
                  <div class="ml-3">
                    <%= form.label "merge_position_#{option[:value]}", 
                                   option[:label], 
                                   class: label_classes %>
                    <p class="<%= description_classes %>"><%= option[:description] %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Additional Options -->
          <div class="mb-6 space-y-3">
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :include_timestamps, 
                                   checked: false,
                                   class: checkbox_input_classes,
                                   name: 'include_timestamps' %>
              </div>
              <div class="ml-3">
                <%= form.label :include_timestamps, 
                               "Include timestamps", 
                               class: label_classes %>
                <p class="<%= description_classes %>">Add timestamps to merged content</p>
              </div>
            </div>

            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :add_separator, 
                                   checked: true,
                                   class: checkbox_input_classes,
                                   name: 'add_separator' %>
              </div>
              <div class="ml-3">
                <%= form.label :add_separator, 
                               "Add separator", 
                               class: label_classes %>
                <p class="<%= description_classes %>">Insert a horizontal line before merged content</p>
              </div>
            </div>

            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :include_attribution, 
                                   checked: true,
                                   class: checkbox_input_classes,
                                   name: 'include_agent_name' %>
              </div>
              <div class="ml-3">
                <%= form.label :include_attribution, 
                               "Include agent name", 
                               class: label_classes %>
                <p class="<%= description_classes %>">Add a note indicating content source (#{sub_agent.agent_type_label})</p>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
            <button type="button"
                    class="<%= button_classes(:cancel) %>"
                    data-action="click->sub-agent-merge#cancel">
              Cancel
            </button>
            
            <button type="submit"
                    class="<%= button_classes(:primary) %>"
                    data-action="click->sub-agent-merge#merge"
                    data-sub-agent-merge-form-target="submitButton"
                    <% unless has_content_to_merge? %>disabled<% end %>>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
              </svg>
              Merge Content
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Success Message Template -->
  <template data-sub-agent-merge-target="successTemplate">
    <div class="<%= success_message_classes %>">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800">
            Content successfully merged to document!
          </p>
        </div>
      </div>
    </div>
  </template>

  <!-- Error Message Template -->
  <template data-sub-agent-merge-target="errorTemplate">
    <div class="<%= error_message_classes %>">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-red-800">
            Failed to merge content. Please try again.
          </p>
        </div>
      </div>
    </div>
  </template>
</div>