<div class="context-sidebar bg-gray-50 border-l border-gray-200 h-full overflow-hidden flex flex-col" data-controller="context-sidebar">
  <div class="p-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">Context Manager</h2>
    <p class="text-sm text-gray-600 mt-1">Manage snippets, drafts, and versions</p>
  </div>

  <div class="flex-1 overflow-y-auto">
    <!-- Snippets Section -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <%= svg_icon_tag('snippet') %>
          Snippets
        </h3>
        <%= link_to "+", new_document_context_item_path(@document, item_type: 'snippet'), 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium",
            data: { turbo_frame: "modal" } %>
      </div>
      <div class="space-y-2" data-context-sidebar-target="snippetList">
        <% snippets.each do |snippet| %>
          <div class="context-item bg-white rounded border border-gray-200 p-2 hover:shadow-sm transition-shadow cursor-move"
               data-context-item-id="<%= snippet.id %>"
               data-context-item-type="snippet"
               draggable="true">
            <h4 class="text-sm font-medium text-gray-900 truncate"><%= snippet.title %></h4>
            <p class="text-xs text-gray-600 mt-1 line-clamp-2"><%= snippet.content.truncate(80) %></p>
            <div class="flex gap-2 mt-2">
              <%= link_to "Preview", document_context_item_path(@document, snippet), 
                  class: "text-xs text-blue-600 hover:text-blue-800",
                  data: { turbo_frame: "modal" } %>
              <%= link_to "Insert", "#", 
                  class: "text-xs text-green-600 hover:text-green-800",
                  data: { action: "click->context-sidebar#insertItem", 
                          context_item_id: snippet.id } %>
              <%= link_to "Edit", edit_document_context_item_path(@document, snippet), 
                  class: "text-xs text-gray-600 hover:text-gray-800",
                  data: { turbo_frame: "modal" } %>
              <%= link_to "Delete", document_context_item_path(@document, snippet), 
                  class: "text-xs text-red-600 hover:text-red-800",
                  data: { turbo_method: :delete, 
                          turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
        <% if snippets.empty? %>
          <p class="text-sm text-gray-500 italic">No snippets yet</p>
        <% end %>
      </div>
    </div>

    <!-- Drafts Section -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <%= svg_icon_tag('draft') %>
          Drafts
        </h3>
        <%= link_to "+", new_document_context_item_path(@document, item_type: 'draft'), 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium",
            data: { turbo_frame: "modal" } %>
      </div>
      <div class="space-y-2" data-context-sidebar-target="draftList">
        <% drafts.each do |draft| %>
          <div class="context-item bg-white rounded border border-gray-200 p-2 hover:shadow-sm transition-shadow cursor-move"
               data-context-item-id="<%= draft.id %>"
               data-context-item-type="draft"
               draggable="true">
            <h4 class="text-sm font-medium text-gray-900 truncate"><%= draft.title %></h4>
            <p class="text-xs text-gray-600 mt-1 line-clamp-2"><%= draft.content.truncate(80) %></p>
            <div class="flex gap-2 mt-2">
              <%= link_to "Preview", document_context_item_path(@document, draft), 
                  class: "text-xs text-blue-600 hover:text-blue-800",
                  data: { turbo_frame: "modal" } %>
              <%= link_to "Insert", "#", 
                  class: "text-xs text-green-600 hover:text-green-800",
                  data: { action: "click->context-sidebar#insertItem", 
                          context_item_id: draft.id } %>
              <%= link_to "Edit", edit_document_context_item_path(@document, draft), 
                  class: "text-xs text-gray-600 hover:text-gray-800",
                  data: { turbo_frame: "modal" } %>
              <%= link_to "Delete", document_context_item_path(@document, draft), 
                  class: "text-xs text-red-600 hover:text-red-800",
                  data: { turbo_method: :delete, 
                          turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
        <% if drafts.empty? %>
          <p class="text-sm text-gray-500 italic">No drafts yet</p>
        <% end %>
      </div>
    </div>

    <!-- Versions Section -->
    <div class="p-4">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-sm font-medium text-gray-700 flex items-center gap-2">
          <%= svg_icon_tag('version') %>
          Versions
        </h3>
        <%= link_to "Save Version", document_context_items_path(@document), 
            method: :post,
            params: { context_item: { item_type: 'version' } },
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium",
            data: { turbo_method: :post } %>
      </div>
      <div class="space-y-2" data-context-sidebar-target="versionList">
        <% versions.each do |version| %>
          <div class="context-item bg-white rounded border border-gray-200 p-2 hover:shadow-sm transition-shadow"
               data-context-item-id="<%= version.id %>"
               data-context-item-type="version">
            <h4 class="text-sm font-medium text-gray-900 truncate"><%= version.title %></h4>
            <p class="text-xs text-gray-500"><%= version.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
            <div class="flex gap-2 mt-2">
              <%= link_to "Restore", "#", 
                  class: "text-xs text-blue-600 hover:text-blue-800",
                  data: { action: "click->context-sidebar#restoreVersion", 
                          version_id: version.id } %>
              <%= link_to "Compare", "#", 
                  class: "text-xs text-gray-600 hover:text-gray-800",
                  data: { action: "click->context-sidebar#compareVersion", 
                          version_id: version.id } %>
              <%= link_to "Delete", document_context_item_path(@document, version), 
                  class: "text-xs text-red-600 hover:text-red-800",
                  data: { turbo_method: :delete, 
                          turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
        <% if versions.empty? %>
          <p class="text-sm text-gray-500 italic">No versions saved</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Search Bar -->
  <div class="p-4 border-t border-gray-200">
    <div class="relative">
      <input type="text" 
             placeholder="Search context items..." 
             class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
             data-context-sidebar-target="searchInput"
             data-action="input->context-sidebar#search">
      <svg class="absolute right-3 top-2.5 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
  </div>
</div>