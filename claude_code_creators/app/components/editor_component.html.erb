<div class="editor-wrapper" 
     data-controller="editor"
     <% if @document.persisted? %>
       data-editor-autosave-url-value="<%= autosave_document_path(@document) %>"
     <% end %>>
  <!-- Editor Toolbar -->
  <div class="editor-toolbar bg-gray-50 border border-gray-300 rounded-t-lg p-2 flex items-center space-x-1">
    <% editor_toolbar_items.each do |item| %>
      <% if item[:divider] %>
        <div class="w-px h-6 bg-gray-300 mx-1"></div>
      <% else %>
        <button 
          type="button"
          class="toolbar-button p-2 rounded hover:bg-gray-200 transition-colors"
          data-trix-action="<%= item[:action] %>"
          title="<%= item[:tooltip] %>">
          <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <% case item[:icon] %>
            <% when "format-bold" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3H8v7m0 0v7h6v-7m-6 0h6"></path>
            <% when "format-italic" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 4h4m0 0l-5 16m5-16h4m-7 16h4"></path>
            <% when "format-strikethrough" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 12h8m-8 0H4m8 0l-2-5m2 5l2-5m-2 5v7"></path>
            <% when "link" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            <% when "format-header" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 16h10m-7-4h4"></path>
            <% when "format-quote-close" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            <% when "code-tags" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            <% when "format-list-bulleted" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <% when "format-list-numbered" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            <% when "paperclip" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
            <% when "undo" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
            <% when "redo" %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 10h-10a8 8 0 00-8 8v2m18-10l-6 6m6-6l-6-6"></path>
            <% end %>
          </svg>
        </button>
      <% end %>
    <% end %>
    
    <!-- Word Count Display -->
    <div class="ml-auto text-sm text-gray-600">
      <span data-editor-target="wordCount">0</span> words
    </div>
  </div>

  <!-- Trix Editor -->
  <div class="border border-t-0 border-gray-300 rounded-b-lg bg-white">
    <% if block_given? %>
      <%= yield %>
    <% end %>
  </div>
  
  <!-- Editor Status -->
  <div class="mt-2 flex items-center justify-between text-sm text-gray-500">
    <div data-editor-target="status" class="flex items-center">
      <span class="inline-block w-2 h-2 bg-green-500 rounded-full mr-2"></span>
      <span>Ready</span>
    </div>
    <div>
      Last saved: <span data-editor-target="lastSaved">Never</span>
    </div>
  </div>
</div>
