<div class="<%= editor_wrapper_class %>" <%= editor_data_attributes.map { |k, v| "#{k}=\"#{v}\"" }.join(" ").html_safe %>>
  <!-- Enhanced Editor Toolbar -->
  <div class="<%= toolbar_class %>">
    <div class="flex items-center space-x-1">
      <% editor_toolbar_items.each do |item| %>
        <% if item[:divider] %>
          <div class="w-px h-6 bg-creative-neutral-300 dark:bg-creative-neutral-600 mx-2"></div>
        <% else %>
          <button 
            type="button"
            class="btn-ghost !p-2 !text-creative-neutral-700 dark:!text-creative-neutral-300 hover:!bg-creative-neutral-100 dark:hover:!bg-creative-neutral-700 rounded-lg transition-all duration-150 group"
            data-trix-action="<%= item[:action] %>"
            data-tooltip="<%= item[:tooltip] %>"
            title="<%= item[:tooltip] %>">
            <%= render "shared/editor_icon", icon: item[:icon] %>
          </button>
        <% end %>
      <% end %>
    </div>
    
    <!-- Enhanced Word Count and Status -->
    <div class="flex items-center space-x-4 text-sm text-creative-neutral-600 dark:text-creative-neutral-400">
      <% if show_presence_indicators? %>
        <div class="flex -space-x-2">
          <!-- Presence indicators will be inserted here via Stimulus -->
          <div data-editor-target="presenceIndicators" class="flex -space-x-2"></div>
        </div>
      <% end %>
      
      <div class="flex items-center space-x-2">
        <span data-editor-target="wordCount" class="font-medium"><%= word_count_display %></span>
        <div class="w-1 h-1 bg-creative-neutral-400 rounded-full"></div>
        <div data-editor-target="status" class="flex items-center space-x-1.5">
          <span class="inline-block w-2 h-2 bg-creative-secondary-500 rounded-full animate-pulse-gentle" data-editor-target="statusIndicator"></span>
          <span data-editor-target="statusText" class="text-xs font-medium">Ready</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Trix Editor -->
  <div class="<%= editor_content_class %>">
    <% if block_given? %>
      <%= yield %>
    <% else %>
      <div class="<%= editor_class %>" 
           data-editor-target="editor"
           data-action="trix-change->editor#handleContentChange trix-selection-change->editor#handleSelectionChange"
           contenteditable="true"
           placeholder="Start writing your document...">
      </div>
    <% end %>
  </div>
  
  <!-- Enhanced Status Bar -->
  <div class="<%= status_bar_class %>">
    <div class="flex items-center space-x-4">
      <% if collaboration_enabled? %>
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4 text-creative-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs">Collaborative editing enabled</span>
        </div>
      <% end %>
      
      <div class="flex items-center space-x-2">
        <svg class="w-4 h-4 text-creative-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <span class="text-xs">Last saved: <span data-editor-target="lastSaved" class="font-medium">Never</span></span>
      </div>
    </div>
    
    <div class="flex items-center space-x-2">
      <% if document.persisted? %>
        <span class="text-xs text-creative-neutral-500">Document ID: <%= document.id %></span>
      <% end %>
    </div>
  </div>
</div>
