<div class="context-item-preview-modal"
     data-modal-target="<%= modal_id %>"
     data-controller="<%= preview_data_attributes[:controller] %>"
     data-context-item-preview-id-value="<%= preview_data_attributes[:context_item_preview_id_value] %>"
     data-context-item-preview-type-value="<%= preview_data_attributes[:context_item_preview_type_value] %>"
     data-context-item-preview-content-type-value="<%= preview_data_attributes[:context_item_preview_content_type_value] %>"
     data-context-item-preview-modal-id-value="<%= preview_data_attributes[:context_item_preview_modal_id_value] %>">
  
  <!-- Modal backdrop -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
       data-action="click->context-item-preview#closeOnBackdrop"
       data-context-item-preview-target="backdrop"
       aria-hidden="true"></div>

  <!-- Modal panel -->
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-4xl"
           data-context-item-preview-target="panel">
        
        <!-- Modal header -->
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">
                <%= context_item.title %>
              </h3>
              <div class="mt-2 flex items-center gap-2">
                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= item_type_badge_class %>">
                  <%= context_item.item_type.capitalize %>
                </span>
                <% if code_language && detect_content_type == :code %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                    <%= code_language %>
                  </span>
                <% end %>
                <span class="text-xs text-gray-500">
                  <%= time_ago_in_words(context_item.created_at) %> ago
                </span>
              </div>
            </div>
            
            <!-- Close button -->
            <button type="button"
                    class="ml-4 inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                    data-action="click->context-item-preview#close"
                    aria-label="Close modal">
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Modal content -->
        <div class="px-4 pb-4 sm:px-6 sm:pb-4">
          <div class="preview-content <%= content_type_class %> max-h-96 overflow-y-auto rounded-lg bg-gray-50 p-4"
               data-context-item-preview-target="content">
            <%= formatted_content %>
          </div>

          <% if context_item.metadata.present? && context_item.metadata['description'].present? %>
            <div class="mt-4 rounded-md bg-blue-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-blue-800">
                    <%= context_item.metadata['description'] %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Modal actions -->
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <% if primary_action %>
            <%= primary_action %>
          <% else %>
            <button type="button"
                    class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 sm:ml-3 sm:w-auto"
                    data-action="click->context-item-preview#insertContent"
                    data-context-item-preview-target="insertButton">
              <svg class="mr-2 -ml-0.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
              </svg>
              Insert
            </button>
          <% end %>

          <% if secondary_actions.any? %>
            <% secondary_actions.each do |action| %>
              <%= action %>
            <% end %>
          <% else %>
            <button type="button"
                    class="inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:ml-3 sm:w-auto"
                    data-action="click->context-item-preview#copyContent"
                    data-context-item-preview-target="copyButton">
              <svg class="mr-2 -ml-0.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path d="M7 3.5A1.5 1.5 0 018.5 2h3.879a1.5 1.5 0 011.06.44l3.122 3.12A1.5 1.5 0 0117 6.622V12.5a1.5 1.5 0 01-1.5 1.5h-1v-3.379a3 3 0 00-.879-2.121L10.5 5.379A3 3 0 008.379 4.5H7v-1z" />
                <path d="M4.5 6A1.5 1.5 0 003 7.5v9A1.5 1.5 0 004.5 18h7a1.5 1.5 0 001.5-1.5v-5.879a1.5 1.5 0 00-.44-1.06L9.44 6.439A1.5 1.5 0 008.378 6H4.5z" />
              </svg>
              Copy
            </button>
            
            <button type="button"
                    class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
                    data-action="click->context-item-preview#close">
              Cancel
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>