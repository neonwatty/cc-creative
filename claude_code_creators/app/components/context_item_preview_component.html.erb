<div class="bg-white rounded-lg shadow-lg p-6 max-w-2xl w-full">
  <!-- Header -->
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center space-x-3">
      <div class="text-gray-600">
        <%= item_type_icon %>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900"><%= @context_item.title %></h3>
        <p class="text-sm text-gray-500">
          <%= @context_item.item_type.capitalize %> â€¢ 
          Created <%= @context_item.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
    </div>
    <button type="button" 
            class="text-gray-400 hover:text-gray-600"
            data-action="click->modal#close">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Content Preview -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-700 mb-2">Content Preview</h4>
    <div class="bg-gray-50 rounded-lg p-4 max-h-64 overflow-y-auto">
      <% if @context_item.item_type == 'version' %>
        <!-- For versions, show formatted HTML content -->
        <div class="prose prose-sm max-w-none">
          <%= @context_item.content.html_safe %>
        </div>
      <% else %>
        <!-- For snippets and drafts, show plain text -->
        <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= @context_item.content %></p>
      <% end %>
    </div>
  </div>

  <!-- Metadata (if any) -->
  <% if formatted_metadata.any? %>
    <div class="mb-6">
      <h4 class="text-sm font-medium text-gray-700 mb-2">Additional Information</h4>
      <dl class="grid grid-cols-2 gap-x-4 gap-y-2 text-sm">
        <% formatted_metadata.each do |key, value| %>
          <dt class="text-gray-600"><%= key.humanize %>:</dt>
          <dd class="text-gray-900"><%= value %></dd>
        <% end %>
      </dl>
    </div>
  <% end %>

  <!-- Actions -->
  <div class="flex justify-end space-x-3">
    <button type="button" 
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200"
            data-action="click->modal#close">
      Close
    </button>
    
    <%= link_to edit_document_context_item_path(@context_item.document, @context_item), 
        class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
        data: { turbo_frame: "modal" } do %>
      Edit
    <% end %>
    
    <button type="button" 
            class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700"
            data-action="click->context-item-preview#insert"
            data-context-item-id="<%= @context_item.id %>">
      Insert into Document
    </button>
  </div>
</div>