<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @sub_agent.display_name %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_document_sub_agent_path(@document, @sub_agent), class: "btn btn-secondary" %>
      <%= link_to "Back", document_sub_agents_path(@document), class: "btn" %>
    </div>
  </div>

  <div class="grid gap-6">
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-semibold mb-4">Details</h2>
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="font-medium">Status:</dt>
            <dd><span class="badge <%= @sub_agent.status_badge_color %>"><%= @sub_agent.status %></span></dd>
          </div>
          <div>
            <dt class="font-medium">Type:</dt>
            <dd><%= @sub_agent.agent_type_label %></dd>
          </div>
          <div>
            <dt class="font-medium">Messages:</dt>
            <dd><%= @sub_agent.message_count %></dd>
          </div>
          <div>
            <dt class="font-medium">Created:</dt>
            <dd><%= @sub_agent.created_at.strftime("%B %d, %Y") %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-semibold mb-4">Recent Messages</h2>
        <div class="space-y-4">
          <% @recent_messages.each do |message| %>
            <div class="p-3 rounded <%= message.role == 'user' ? 'bg-blue-50' : 'bg-gray-50' %>">
              <div class="font-medium text-sm"><%= message.role.capitalize %></div>
              <div class="mt-1"><%= message.content %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>