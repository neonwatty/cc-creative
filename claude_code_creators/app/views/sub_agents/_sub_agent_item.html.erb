<%# Sub-agent item for sidebar display %>
<div class="sub-agent-item p-4 hover:bg-gray-50 transition-colors cursor-pointer <%= 'bg-blue-50 border-r-2 border-blue-500' if selected %>"
     data-sub-agent-id="<%= agent.id %>"
     data-action="click->sub-agent-sidebar#selectAgent"
     data-sub-agent-sidebar-target="dragHandle">
  
  <div class="flex items-start space-x-3">
    <!-- Agent Icon -->
    <div class="flex-shrink-0 w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-lg">
      <%= agent_icon %>
    </div>
    
    <!-- Agent Content -->
    <div class="flex-1 min-w-0">
      <!-- Agent Name and Type -->
      <div class="flex items-center justify-between">
        <div class="min-w-0 flex-1">
          <p class="text-sm font-medium text-gray-900 truncate">
            <%= agent.agent_type_label %>
          </p>
          <p class="text-xs text-gray-500 truncate">
            <%= agent.name if agent.name != agent.agent_type_label %>
          </p>
        </div>
        
        <!-- Status Badge -->
        <span class="<%= status_badge_classes %>">
          <%= status_icon.html_safe %>
          <%= agent.status.humanize %>
        </span>
      </div>
      
      <!-- Message Count and Timestamp -->
      <div class="mt-2 flex items-center justify-between text-xs text-gray-500">
        <span>
          <%= pluralize(agent.message_count, 'message') %>
        </span>
        <span>
          â€¢ <%= format_timestamp %>
        </span>
      </div>
    </div>
  </div>
</div>