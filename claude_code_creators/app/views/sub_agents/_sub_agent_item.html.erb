<button type="button"
        class="w-full px-4 py-3 hover:bg-gray-50 transition-colors text-left focus:outline-none focus:bg-gray-50 <%= 'bg-blue-50 hover:bg-blue-100' if selected %>"
        data-action="click->sub-agent-sidebar#selectAgent"
        data-agent-id="<%= agent.id %>"
        aria-selected="<%= selected %>">
  <div class="flex items-start space-x-3">
    <span class="text-2xl flex-shrink-0"><%= agent_icon %></span>
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <h4 class="text-sm font-medium text-gray-900 truncate"><%= agent.agent_type_label %></h4>
        <span class="<%= status_badge_classes %>">
          <%= status_icon.html_safe %>
          <%= agent.status.capitalize %>
        </span>
      </div>
      <p class="text-xs text-gray-500 mt-1">
        <%= agent.message_count %> messages
        <% if agent.updated_at %>
          â€¢ <%= format_timestamp %>
        <% end %>
      </p>
      <% if agent.metadata["current_task"].present? %>
        <p class="text-xs text-gray-600 mt-1 truncate">
          <%= agent.metadata["current_task"] %>
        </p>
      <% end %>
    </div>
  </div>
</button>