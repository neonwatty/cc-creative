<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Sub-Agents</h1>
    <%= link_to "New Sub-Agent", new_document_sub_agent_path(@document), class: "btn btn-primary" %>
  </div>

  <div class="grid gap-4">
    <% @sub_agents.each do |sub_agent| %>
      <div class="border rounded-lg p-4" id="<%= dom_id(sub_agent) %>">
        <h2 class="text-xl font-semibold"><%= sub_agent.display_name %></h2>
        <div class="flex gap-4 mt-2">
          <span class="badge <%= sub_agent.status_badge_color %>"><%= sub_agent.status %></span>
          <span class="text-sm text-gray-600">Messages: <%= sub_agent.message_count %></span>
        </div>
        <div class="mt-4 flex gap-2">
          <%= link_to "View", document_sub_agent_path(@document, sub_agent), class: "btn btn-sm" %>
          <%= link_to "Edit", edit_document_sub_agent_path(@document, sub_agent), class: "btn btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>