<%= form_with(model: document, local: true, class: "space-y-6") do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-lg font-semibold text-red-800 mb-2">
        <%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% document.errors.full_messages.each do |message| %>
          <li class="text-red-600"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="space-y-6">
      <!-- Title Field -->
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            placeholder: "Enter document title..." %>
      </div>

      <!-- Description Field -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, 
            rows: 3,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            placeholder: "Brief description of your document..." %>
      </div>

      <!-- Content Field -->
      <div>
        <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= render EditorComponent.new(document: document, current_user: current_user) do %>
          <%= form.rich_text_area :content, 
              class: "min-h-[300px]",
              placeholder: "Start writing your document..." %>
        <% end %>
      </div>

      <!-- Tags Field -->
      <div>
        <%= form.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :tag_list, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            placeholder: "Enter tags separated by commas (e.g., ruby, rails, tutorial)" %>
        <p class="mt-1 text-sm text-gray-500">Separate tags with commas</p>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-between items-center">
    <div>
      <%= link_to "Cancel", documents_path, class: "text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
    
    <div class="space-x-4">
      <%= form.submit class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>