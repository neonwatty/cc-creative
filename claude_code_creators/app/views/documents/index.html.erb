<% content_for :page_title, "My Documents" %>

<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Documents</h1>
      <p class="text-gray-600 mt-1">Manage and organize your creative documents</p>
    </div>
    
    <%= link_to new_document_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Document
    <% end %>
  </div>

  <!-- Documents Grid -->
  <% if @documents.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @documents.each do |document| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
          <%= link_to document_path(document), class: "block p-6" do %>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 truncate">
              <%= document.title %>
            </h3>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= document.description.presence || document.excerpt(150) %>
            </p>
            
            <!-- Document Meta -->
            <div class="flex items-center justify-between text-xs text-gray-500">
              <div class="flex items-center space-x-4">
                <span><%= document.word_count %> words</span>
                <span><%= document.reading_time %> min read</span>
              </div>
              <time datetime="<%= document.updated_at.iso8601 %>">
                <%= document.updated_at.strftime("%b %d, %Y") %>
              </time>
            </div>
            
            <!-- Tags -->
            <% if document.tags.any? %>
              <div class="mt-3 flex flex-wrap gap-1">
                <% document.tags.first(3).each do |tag| %>
                  <span class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded">
                    <%= tag %>
                  </span>
                <% end %>
                <% if document.tags.size > 3 %>
                  <span class="inline-block px-2 py-1 text-xs text-gray-500">
                    +<%= document.tags.size - 3 %> more
                  </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
          
          <!-- Quick Actions -->
          <div class="px-6 pb-4 flex justify-end space-x-2">
            <%= link_to edit_document_path(document), 
                class: "text-sm text-gray-600 hover:text-gray-800 transition-colors",
                title: "Edit document" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            
            <%= link_to document_path(document), 
                method: :delete,
                data: { confirm: "Are you sure you want to delete this document?" },
                class: "text-sm text-red-600 hover:text-red-800 transition-colors",
                title: "Delete document" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No documents</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new document.</p>
      <div class="mt-6">
        <%= link_to new_document_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create your first document
        <% end %>
      </div>
    </div>
  <% end %>
</div>