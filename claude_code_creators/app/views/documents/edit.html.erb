<% content_for :page_title, "Edit Document" %>

<div class="flex h-full">
  <!-- Main Content Area -->
  <div class="flex-1 px-8 py-6 overflow-y-auto">
    <div class="max-w-4xl">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Edit Document</h1>
        <p class="text-gray-600 mt-1">Make changes to your document</p>
      </div>

      <%= render 'form', document: @document, current_user: current_user %>
    </div>
  </div>

  <!-- Context Sidebar -->
  <div class="w-80 flex-shrink-0">
    <%= render ContextSidebarComponent.new(document: @document, current_user: current_user) %>
  </div>
</div>