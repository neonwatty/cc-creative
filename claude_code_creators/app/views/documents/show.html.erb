<% content_for :page_title, @document.title %>
<% content_for :full_height, true %>

<div class="flex h-full">
  <!-- Main Content Area -->
  <div class="flex-1 overflow-y-auto">
    <div class="max-w-4xl mx-auto p-6">
      <!-- Document Header -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @document.title %></h1>
            
            <% if @document.description.present? %>
              <p class="text-gray-600 mb-4"><%= @document.description %></p>
            <% end %>
            
            <!-- Document Meta -->
            <div class="flex items-center space-x-6 text-sm text-gray-500">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><%= @document.reading_time %> min read</span>
              </div>
              
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <span><%= @document.word_count %> words</span>
              </div>
              
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime="<%= @document.updated_at.iso8601 %>">
                  Updated <%= @document.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                </time>
              </div>
            </div>
          </div>
          
          <!-- Actions -->
          <div class="flex items-center space-x-3 ml-6">
            <%= link_to duplicate_document_path(@document), 
                method: :post,
                class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Duplicate
            <% end %>
            
            <%= link_to edit_document_path(@document), 
                class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit
            <% end %>
            
            <%= link_to document_path(@document), 
                method: :delete,
                data: { confirm: "Are you sure you want to delete this document?" },
                class: "inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-medium hover:bg-red-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete
            <% end %>
          </div>
        </div>
        
        <!-- Tags -->
        <% if @document.tags.any? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              <div class="flex flex-wrap gap-2">
                <% @document.tags.each do |tag| %>
                  <span class="inline-block px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Document Content -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <div class="prose prose-lg max-w-none">
          <%= @document.content %>
        </div>
      </div>

      <!-- Bottom Navigation -->
      <div class="mt-8 flex justify-between items-center">
        <%= link_to documents_path, class: "text-gray-600 hover:text-gray-800 transition-colors flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Documents
        <% end %>
        
        <div class="text-sm text-gray-500">
          Created <%= @document.created_at.strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
  </div>

  <!-- Context Sidebar -->
  <aside class="w-80 h-full border-l border-gray-200 bg-gray-50 flex-shrink-0">
    <%= turbo_frame_tag "context-sidebar-frame" do %>
      <%= render ContextSidebarComponent.new(
        document: @document,
        current_user: current_user,
        active_tab: params[:tab] || "snippets",
        sort_by: params[:sort_by] || "recent",
        search_query: params[:query] || "",
        filter_type: params[:type] || "",
        date_from: params[:date_from],
        date_to: params[:date_to]
      ) %>
    <% end %>
  </aside>
</div>