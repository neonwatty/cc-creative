<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Context Items</h1>
    <%= link_to "New Context Item", new_document_context_item_path(@document), 
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded",
                data: { turbo_frame: "new_context_item" } %>
  </div>

  <%= link_to "← Back to Document", document_path(@document), 
              class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>

  <div id="context_items" class="space-y-4">
    <% @context_items.each do |context_item| %>
      <%= render "context_item", context_item: context_item %>
    <% end %>
  </div>

  <%= turbo_frame_tag "new_context_item" %>
</div>