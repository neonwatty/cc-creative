<%= form_with(model: [context_item.document, context_item], local: true) do |form| %>
  <% if context_item.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <strong class="font-bold">Please fix the following errors:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% context_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, 
                        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                        placeholder: "Enter a descriptive title" %>
  </div>

  <div class="mb-6">
    <%= form.label :item_type, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :item_type, 
                    options_for_select([
                      ['Code Snippet', 'snippet'],
                      ['Draft', 'draft'],
                      ['Version', 'version']
                    ], context_item.item_type),
                    {},
                    class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :content, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :content, 
                       rows: 10,
                       class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                       placeholder: "Enter the content..." %>
  </div>

  <div class="mb-6">
    <%= form.label :metadata, "Metadata (JSON format)", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :metadata, 
                       rows: 4,
                       class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline font-mono text-sm",
                       placeholder: '{"key": "value"}' %>
    <p class="text-gray-600 text-xs italic mt-1">Optional: Enter valid JSON or leave blank</p>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit context_item.new_record? ? "Create Context item" : "Update Context item", 
                    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Cancel", 
                context_item.new_record? ? document_context_items_path(context_item.document) : document_context_item_path(context_item.document, context_item),
                class: "text-gray-500 hover:text-gray-700" %>
  </div>
<% end %>