<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-6">
    <%= link_to "â† Back to Context Items", document_context_items_path(@document), 
                class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-4"><%= @context_item.title %></h1>
      
      <div class="flex items-center space-x-4 text-sm text-gray-600">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <%= @context_item.item_type %>
        </span>
        <span>Created by <%= @context_item.user.name %></span>
        <span><%= @context_item.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
    </div>

    <div class="prose prose-lg max-w-none mb-8">
      <%= simple_format(@context_item.content) %>
    </div>

    <% if @context_item.metadata.present? %>
      <div class="bg-gray-50 rounded-lg p-6 mb-8">
        <h3 class="text-lg font-semibold mb-3">Metadata</h3>
        <pre class="text-sm overflow-x-auto"><%= JSON.pretty_generate(JSON.parse(@context_item.metadata)) rescue @context_item.metadata %></pre>
      </div>
    <% end %>

    <div class="flex justify-between items-center pt-6 border-t">
      <div class="text-sm text-gray-500">
        Last updated: <%= @context_item.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
      
      <div class="flex space-x-4">
        <%= link_to "Edit", edit_document_context_item_path(@document, @context_item), 
                    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= button_to "Delete", document_context_item_path(@document, @context_item),
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure you want to delete this context item?" } },
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>