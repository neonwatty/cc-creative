<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-6">
    <%= link_to "← Back to Context Item", document_context_item_path(@document, @context_item), 
                class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold mb-6">Edit Context Item</h1>
    
    <%= turbo_frame_tag "edit_context_item_#{@context_item.id}" do %>
      <%= render "form", context_item: @context_item %>
    <% end %>
  </div>
</div>