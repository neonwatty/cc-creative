<div class="group relative hover:bg-gray-50 transition-colors duration-150 pl-8" 
     data-context-item
     data-context-item-id="<%= item.id %>"
     data-context-item-content="<%= item.content %>"
     data-drag-drop-target="item">
  <%= link_to document_context_item_path(item.document, item), 
              class: "block px-4 py-3",
              data: { turbo_frame: "_top" } do %>
    <div class="flex items-start space-x-3">
      <!-- Icon -->
      <span class="text-lg flex-shrink-0">
        <%= render 'shared/context_icon', type: type %>
      </span>
      
      <!-- Content -->
      <div class="flex-1 min-w-0">
        <div class="flex items-center justify-between">
          <h4 class="text-sm font-medium text-gray-900 truncate" data-item-title>
            <% if local_assigns[:highlighted_title].present? %>
              <%= raw(highlighted_title) %>
            <% else %>
              <%= item.title %>
            <% end %>
          </h4>
          <span class="text-xs text-gray-500 flex-shrink-0 ml-2">
            <%= format_date(item.created_at) %>
          </span>
        </div>
        
        <% if item.content.present? %>
          <p class="mt-1 text-xs text-gray-600 line-clamp-2" data-item-content>
            <% if local_assigns[:highlighted_content].present? %>
              <%= raw(highlighted_content) %>
            <% else %>
              <%= truncate_content(item.content) %>
            <% end %>
          </p>
        <% end %>
        
        <% if item.metadata.present? && item.metadata['tags'].present? && item.metadata['tags'].is_a?(Array) %>
          <div class="mt-1 flex flex-wrap gap-1">
            <% item.metadata['tags'].each do |tag| %>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                <%= tag %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Actions (shown on hover) -->
  <div class="absolute right-2 top-3 opacity-0 group-hover:opacity-100 transition-opacity duration-150">
    <div class="flex items-center space-x-1">
      <%= link_to edit_document_context_item_path(item.document, item),
                  class: "p-1 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded",
                  title: "Edit",
                  data: { turbo_frame: "_top" } do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>
      
      <%= button_to document_context_item_path(item.document, item),
                    method: :delete,
                    class: "p-1 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded",
                    title: "Delete",
                    form_class: "inline",
                    data: { 
                      confirm: "Are you sure you want to delete this #{type}?",
                      turbo_frame: "_top"
                    } do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>