<div>
  <% if @user.errors.any? %>
    <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg" id="error_explanation">
      <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Sign up</h1>
  <p class="text-gray-600 mb-8">Create your account to start creating documents with AI assistance.</p>

  <!-- OAuth Sign Up Options -->
  <div class="space-y-3 mb-6">
    <%= link_to "/auth/google_oauth2", method: :post, data: { turbo: false }, 
        class: "w-full flex items-center justify-center gap-3 px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-white hover:bg-gray-50 transition-colors" do %>
      <svg class="w-5 h-5" viewBox="0 0 24 24">
        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
      <span class="text-gray-700 font-medium">Sign up with Google</span>
    <% end %>

    <%= link_to "/auth/github", method: :post, data: { turbo: false },
        class: "w-full flex items-center justify-center gap-3 px-4 py-3 border border-gray-300 rounded-md shadow-sm bg-white hover:bg-gray-50 transition-colors" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-gray-700 font-medium">Sign up with GitHub</span>
    <% end %>
  </div>

  <div class="relative my-6">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">Or continue with email</span>
    </div>
  </div>

  <%= form_with model: @user, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, 
          required: true, 
          autofocus: true, 
          placeholder: "Enter your full name", 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :email_address, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.email_field :email_address, 
          required: true, 
          autocomplete: "email", 
          placeholder: "Enter your email address", 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.password_field :password, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Choose a strong password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
      <p class="text-sm text-gray-500 mt-1">Must be at least 8 characters long</p>
    </div>

    <div class="my-5">
      <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.password_field :password_confirmation, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Confirm your password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
    </div>

    <div class="flex items-center justify-between my-8">
      <%= form.submit "Create Account", 
          class: "w-full sm:w-auto text-center rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium cursor-pointer transition-colors" %>
    </div>

    <div class="text-center text-sm text-gray-600">
      Already have an account? 
      <%= link_to "Sign in", new_session_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>
  <% end %>
</div>
