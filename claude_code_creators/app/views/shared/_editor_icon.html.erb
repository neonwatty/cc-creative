<svg class="w-5 h-5 transition-colors duration-150 group-hover:text-creative-primary-600 dark:group-hover:text-creative-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <% case icon %>
  <% when "format-bold" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 6h6a3 3 0 013 3v0a3 3 0 01-3 3H8V6zM8 12h7a3 3 0 013 3v0a3 3 0 01-3 3H8v-6z"></path>
  <% when "format-italic" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 4h4m0 0l-5 16m5-16h4m-7 16h4"></path>
  <% when "format-strikethrough" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12h12M8 5l8 3m-8 8l8-3"></path>
  <% when "format-underline" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4v8a4 4 0 008 0V4m-8 16h8"></path>
  <% when "format-header-1" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 6h2v12H6V6zM10 12h4v6h2v-6h4v-2h-4V4h-2v6h-4v2z"></path>
  <% when "format-header-2" %>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 6h2v12H6V6zM14 6a4 4 0 014 4v2a4 4 0 01-4 4h-2v2h6v2h-8v-4a4 4 0 014-4v-2a2 2 0 00-2-2h-2V6h2z"></path>
