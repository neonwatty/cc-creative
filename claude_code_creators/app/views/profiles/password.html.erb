<div class="mx-auto md:w-2/3 w-full">
  <% if @user.errors.any? %>
    <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg" id="error_explanation">
      <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this password from being changed:</h2>
      <ul class="list-disc list-inside">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Change Password</h1>
  <p class="text-gray-600 mb-8">Keep your account secure by using a strong password.</p>

  <%= form_with model: @user, url: update_password_profile_path, method: :patch, class: "contents" do |form| %>
    <div class="my-5">
      <%= label_tag :current_password, "Current password", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= password_field_tag :current_password, 
          nil,
          required: true, 
          autofocus: true,
          autocomplete: "current-password", 
          placeholder: "Enter your current password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.password_field :password, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Choose a new password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
      <p class="text-sm text-gray-500 mt-1">Must be at least 8 characters long</p>
    </div>

    <div class="my-5">
      <%= form.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.password_field :password_confirmation, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Confirm your new password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 focus:ring-2 focus:ring-blue-500 px-3 py-2 w-full" %>
    </div>

    <div class="flex items-center gap-3 my-8">
      <%= form.submit "Update Password", 
          class: "text-center rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium cursor-pointer transition-colors" %>
      
      <%= link_to "Cancel", profile_path, 
          class: "text-center rounded-md px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium transition-colors" %>
    </div>
  <% end %>
</div>