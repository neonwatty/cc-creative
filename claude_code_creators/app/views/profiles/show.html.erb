<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice"><%= notice %></div>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Your Profile</h1>

  <div class="bg-white shadow-sm rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Account Information</h2>
    
    <div class="space-y-4">
      <div>
        <p class="text-sm font-medium text-gray-500">Name</p>
        <p class="text-lg text-gray-800"><%= @user.name %></p>
      </div>
      
      <div>
        <p class="text-sm font-medium text-gray-500">Email</p>
        <p class="text-lg text-gray-800"><%= @user.email_address %></p>
      </div>
      
      <div>
        <p class="text-sm font-medium text-gray-500">Role</p>
        <p class="text-lg text-gray-800 capitalize"><%= @user.role %></p>
      </div>
      
      <div>
        <p class="text-sm font-medium text-gray-500">Member since</p>
        <p class="text-lg text-gray-800"><%= @user.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>

    <div class="mt-6 flex gap-3">
      <%= link_to "Edit Profile", edit_profile_path, 
          class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium transition-colors" %>
      <%= link_to "Change Password", password_profile_path, 
          class: "rounded-md px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium transition-colors" %>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Connected Accounts</h2>
    
    <div class="space-y-3">
      <% %w[google_oauth2 github].each do |provider| %>
        <% identity = @user.identities.find_by(provider: provider) %>
        <div class="flex items-center justify-between p-3 border rounded-lg">
          <div class="flex items-center gap-3">
            <% if provider == "google_oauth2" %>
              <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
            <% else %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
              </svg>
            <% end %>
            <div>
              <div class="font-medium"><%= provider == "google_oauth2" ? "Google" : "GitHub" %></div>
              <% if identity %>
                <div class="text-sm text-gray-500">Connected</div>
              <% end %>
            </div>
          </div>
          
          <% if identity %>
            <span class="text-sm text-green-600">âœ“ Connected</span>
          <% else %>
            <%= link_to "Connect", "/auth/#{provider}", method: :post, data: { turbo: false },
                class: "text-sm rounded-md px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white font-medium transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Account Actions</h2>
    
    <div class="space-y-3">
      <%= link_to "Sign out", session_path, 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?" },
          class: "block w-full text-left rounded-md px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 font-medium transition-colors" %>
    </div>
  </div>
</div>